{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["src/*"],
        "utils/*": ["src/utils/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }